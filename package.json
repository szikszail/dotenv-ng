{
  "name": "dotenv-ng",
  "version": "1.0.0",
  "description": "This tool is a custom implementation to handle .env files, inspired by dotenv (NPM) and python-dotenv (PyPi).",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "dotenv-ng": "./bin/dotenv-ng.js"
  },
  "scripts": {
    "build": "npm run buildUpdate && npm test && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs ./reports ./coverage",
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports jest --coverage",
    "lint": "eslint . --ext .ts --fix",
    "compile": "tsc && npm run lint",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/dotenv-ng.git"
  },
  "keywords": [],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "bugs": {
    "url": "https://github.com/szikszail/dotenv-ng/issues"
  },
  "homepage": "https://github.com/szikszail/dotenv-ng#readme",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.13",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "is-ci": "^3.0.1",
    "yargs": "^17.5.1"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
